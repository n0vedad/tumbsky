{
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 110,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-css-order"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": ["tsconfig.json", "jsconfig.json", "tsconfig.*.json"],
			"options": {
				"parser": "jsonc"
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"printWidth": 100,
				"proseWrap": "always"
			}
		}
	]
}
