{
	"name": "tumbsky",
	"description": "A Tumblr-style Bluesky client with custom CSS styling",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "pnpm@10.25.0",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "bash scripts/dev.sh",
		"dev:local": "vite dev",
		"build": "vite build",
		"start": "node build/index.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"env:setup": "node scripts/setup-env.mjs",
		"lex:generate": "lex-cli generate",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@atcute/lex-cli": "^2.5.2",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24.10.4",
		"drizzle-kit": "^0.31.8",
		"prettier": "^3.7.4",
		"prettier-plugin-css-order": "^2.1.2",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.7"
	},
	"dependencies": {
		"@atcute/atproto": "^3.1.9",
		"@atcute/bluesky": "^3.2.14",
		"@atcute/client": "^4.1.1",
		"@atcute/identity": "^1.1.3",
		"@atcute/identity-resolver": "^1.2.0",
		"@atcute/identity-resolver-node": "^1.0.3",
		"@atcute/lexicons": "^1.2.5",
		"@atcute/multibase": "^1.1.6",
		"@atcute/oauth-node-client": "^0.1.2",
		"@atcute/tap": "^0.1.1",
		"@atcute/tid": "^1.0.3",
		"@atcute/uint8array": "^1.0.6",
		"@badrap/valita": "^0.4.6",
		"@libsql/client": "^0.15.15",
		"@types/ws": "^8.18.1",
		"drizzle-orm": "^0.45.1",
		"nanoid": "^5.1.6",
		"postcss": "^8.5.6",
		"postcss-safe-parser": "^7.0.1",
		"valibot": "^1.2.0",
		"ws": "^8.18.3"
	}
}
